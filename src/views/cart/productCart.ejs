<!DOCTYPE html>
<html lang="en">

<!--==========================
            HEAD
============================-->

    <%-include('../partials/head', {title:"Cart", style:"styles-cart"}) %>

<!--==========================
            BODY
============================-->

<body>
    <!------HEADER------>
    <%- include('../partials/header') %>


    <!--==========================
           MAIN
============================-->
<main>
    <div class="cart-template">
        <div class="cart-template-products">
            <div class="cart-title">
                <h1>Tu Carrito</h1>
            </div>
            <!-- <div class="actualizar">
                <a href="#" continuar="continuar">Actualizar carrito | Continuar comprando</a>
            </div> -->
            <!-- ARTICULOS DEL CARRITO DE COMPRAS -->
            <section class="content">
                <article class="cartProducts">
                    <div class="items">
                        <div class="items-img">
                            <a href="#"><img src="/img/products/img-products-homalomena.jpg" alt=""></a>
                        </div>
                        <div class="items-content">
                            <div class="items-desc">
                                <div class="item-title">
                                    <a href="#"><span>Homalomena 'Selby'</span></a>
                                </div>
                                
                                <div class="items-description">
                                    <p>Maceta: 12</p>
                                </div>    
                            </div>
                            <div class="amount-cost">
                                <h3>$90.000</h3>
                            </div> 
                        </div>
                        
                    </div>
                    
                    <div class="amount">
                        <div class="amount-button">
                            <div class="amount-group">
                                <a href=""><i class="far fa-minus-square"></i></a>
                                <input type="text" value="1">
                                <a href=""><i class="far fa-plus-square"></i></a> 
                            </div>
                        </div>
                        <div class="amount-subtotal">
                            <h3 class="amount-total">Total producto:</h3>
                            <h3>$90.000</h3>
                        </div>
                        <div class="close">
                            <div>
                                <i class="fas fa-times"></i>
                            </div>
                        </div>
                    </div>
                </article>

                <article class="cartProducts">
                    <div class="items">
                        <div class="items-img">
                            <a href="#"><img src="/img/products/img-products-suculenta-variada.jpg" alt=""></a>
                        </div>
                        <div class="items-content">
                            <div class="items-desc">
                                <div class="item-title">
                                    <a href="#"><span>Suculenta variada</span></a>
                                </div>
                                
                                <div class="items-description">
                                    <p>Maceta: 10</p>
                                </div>    
                            </div>
                            <div class="amount-cost">
                                <h3>$45.000</h3>
                            </div> 
                        </div>
                        
                    </div>
                    
                    <div class="amount">
                        <div class="amount-button">
                            <div class="amount-group">
                                <a href=""><i class="far fa-minus-square"></i></a>
                                <input type="text" value="1">
                                <a href=""><i class="far fa-plus-square"></i></a> 
                            </div>
                        </div>
                        <div class="amount-subtotal">
                            <h3 class="amount-total">Total producto:</h3>
                            <h3>$45.000</h3>
                        </div>
                        <div class="close">
                            <div>
                                <i class="fas fa-times"></i>
                            </div>
                        </div>
                    </div>
                </article>
            </section>
        </div>

            <!-- DETALLE DE LA COMPRA -->
        <div class="cart-template-detail">
            <div class="cart-title-detail">
                <h1>Resumen de tu compra</h1>
            </div>
            <div class="subtotal">
                <div class="info">
                    <h2>Subtotal:</h2>
                </div>
                <div class="subtotal-cost">
                    <h2>$135.000</h2>
                </div>
            </div>

            <div class="discounts">
                <div class="info">
                    <h2>Descuentos:</h2>
                </div>
                <div class="discount-cost">
                    <h2>$</h2>
                </div>
            </div>

            <div class="total">
                <div class="info">
                    <h2>Total:</h2>
                </div>
                <div class="total-cost">
                    <h2>$135.000</h2>
                </div>
            </div>

            <div class="instructions">
                <div class="instructions-title">
                    <h2>Escribe alguna instrucci√≥n al vendedor:</h2>
                </div>

                <div class="instructions-description">
                    <textarea name="textarea" rows="10" cols="36"></textarea>
                </div>

                <div class="instructions-comprar">
                    <a href="/cart/checkout"><button type="submit" name="comprar"  class="comprar">Finalizar compra</button></a>
                </div>

                <div class="instructions-vaciar">
                    <button type="reset" name="vaciar"  class="vaciar">Vaciar carrito</button>
                </div>

                <div class="instructions-seguirComprando">
                    <button type="submit" name="seguirComprando"  class="seguirComprando">Seguir comprando</button>
                </div>
            </div>
       </div>
    </div>

</main>

      <!-- FOOTER -->
      <%- include('../partials/footer') %>
</body>

</html>