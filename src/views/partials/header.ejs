<header class="main-header">
    <div class="main-header-top-bar">
        <div class="main-header-div">
            <div class="div-main-logo">
               <a href="/"> <img src="/img/sunflowerLogo.png" alt="logo sunflower"> </a>
            </div>
             <!--==========================
                    MENÚ NAVEGACIÓN
              ============================-->
 
            <nav class="main-navbar">
                <ul> 
                    <li> <a href="/">Inicio</a> </li>
                    <li> <a href="/products">Productos</a> </li>
                    <% if(locals.userLogged && locals.userLogged.rol_id == 1) {%>
                    <li>  <a href="/products/create"> Crear producto<i class="fas fa-dolly-flatbed"></i></a></li>
                    <% } %>
                    <li> <a href="/about">Acerca de nosotros</a> </li>
                </ul>
            </nav>

           <div class="div-main-iconos">
                    <!--SECCION USUARIO LOGUEADO -->
                <% if (locals.isLogged) { %>
                    <div class="contenedor-perfil"> 
                            <div class="perfil-detalle">
                                <a href="/users/profile"><img src="/img/users/<%= locals.userLogged.image_profile%>" alt="imagen perfil"></a>
                            </div>
                            <div class="nombre-usuario"><p>Hola! <%= locals.userLogged.first_name %></p></div>
                            <div class="logout"><a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a></div>
                    </div>
                <% } %>

                    <% if (!locals.isLogged) { %>
                        <div class="login">
                            <a href="/users/login" >
                                <i class="fas fa-user"></i>
                            </a>
                        </div>
                    <% } %>
                    
                    <div class="carrito">
                        <a href="/cart">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                    <div class="hamburguer-buttom">
                        <a href="" >
                            <i class="fas fa-bars"></i>
                        </a>
                    </div>
           </div>    
        </div>
    </div>
    <!-- Barra de búsqueda -->
    <div class="main-div-search">
        <div class="div-search"> 
            <form action="/products/search" method="POST" >   
                <div class="div-main-busqueda">
                    <input class="input-busquedasearch type="search" name="busqueda" placeholder="¿Qué estás buscando?" ></input>
                    <button type="submit" class="ilupa"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</header>
