<!DOCTYPE html>
<html lang="en">
    <!--==========================
            HEAD
    ============================-->
  <%-include('../partials/head', {title:"Users", style:"styles-profile"}) %>

<body>
    <%- include('../partials/header') %>

    <main class="main">
        <div class="Name-user">
            <div class="name">
                <h3><%= user.first_name + ' ' +user.last_name %> </h3>
            </div>
    
            <div class="password">
                <form action="/users/delete/<%= user.id%>?_method=DELETE" method="POST" class="forms-button">
                    <button type="submit"><i class="fas fa-trash"></i></button>
                </form>
            </div>
        </div>
    
        <section class="data-content">
            <article class="user-data">
                <div class="img-container"> 
                    <div class="img-profile">
                        <img src="/img/users/<%= user.image_profile%>" alt="">
                    </div>
                </div>
                <div class="rol-profile"> 
                    <% for (let i=0; i<rols.length; i++) {%>
                       <% if (user.rol_id == rols[i].id){ %>
                        <h4> <%= rols[i].name%> </h4> 
                        <% } %> 
                    <% } %>
                </div>
                <div class="user-title">
                    <div>
                        <h3>Información de contacto</h3>
                    </div>
                    <div class="edit">
                        <a href="/users/editUser/<%= user.id%>"><i class="fas fa-edit"></i></a>
                    </div>
                </div>
                <div class="user-info">
                    <div class="space">
                        <h3>Nombre</h3>
                        <p><%= user.first_name%></p>
                    </div>
                    <div class="space">
                        <h3>Apellido</h3>
                        <p><%= user.last_name%></p>
                    </div>
                    <div class="space">
                        <h3>Email</h3>
                        <p><%= user.email%></p>
                    </div>
                    <div class="space">
                        <h3>Teléfono</h3>
                        <p><%= user.phone%></p>
                    </div>
                </div>
            </article>
            <article class="orders">
                <div class="main-orders">
                    <h2>Historial</h2>
                </div>
                <div class="orders-realize">

                </div>
    
            </article>
        </section>
    </main>


    <!-- FOOTER -->
    <%- include('../partials/footer') %>
    <script src='/js/menu-hamburguer/hamburguer-button.js'></script>

   
</body>
</html>