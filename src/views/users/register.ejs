<!--############################# LINEA DIVISORA ENTRE EL ENCABEZADO Y EL CUERPO ##############################--> 
    <main>
<!--CONTENEDOR DE TODOS LOS ELEMENTOS DE CUERPO-->
        <div class="container">
            <h3>REGÍSTRATE</h3>
                <hr color="#edafa4">
            <form action="./register" method="post">
                <!--CONTENEDOR FORMULARIO-->
                <div class="caja-datos">
                    <div class="individual-box">
                        <% if (locals.errors && errors.first_name) { %>
                            <div class="msgError">
                                <%= errors.first_name.msg %> 
                            </div>
                        <% } %>
                        <input type="name" name="first_name" placeholder="Nombre" >
                    </div>
                    
                    <div class="individual-box">   
                        <% if (locals.errors && errors.last_name) { %>
                            <div class="msgError">
                                <%= errors.last_name.msg %> 
                            </div>
                        <% } %>
                        <input type="surname" name="last_name" placeholder="Apellido" >

                    </div>
                    <div class="individual-box">   
                        <% if (locals.errors && errors.email) { %>
                            <div class="msgError">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %>
                        <input type="email" name="email" placeholder="E-mail" >
                    </div>
                    <div class="individual-box">
                        <% if (locals.errors && errors.phone) { %>
                            <div class="msgError">
                                <%= errors.phone.msg %> 
                            </div>
                        <% } %>
                        <input type="phone" name="phone" placeholder="Teléfono">
                    </div>
                    <div class="individual-box">   
                        <% if (locals.errors && errors.password1) { %>
                            <div class="msgError">
                                <%= errors.password1.msg %> 
                            </div>
                        <% } %>
                        <input type="password" minlength="4" maxlength="8" name="password1" placeholder="Contraseña" >
                    </div>
                    <div class="individual-box">
                        <input type="password" minlength="4" maxlength="8" name="password2" placeholder="Confirmar contraseña" >
                    </div>
