<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head') %>
    <link rel="stylesheet" href="/css/productsList.css">
   <title>Listado de productos</title>
</head>
<body>
      <!--
        HEADER
      -->
  <%- include('../partials/header') %>

  <!---- ESPACIO ENTRE HEADER Y MAIN
  ------->

  <div class="space-between-header-main"></div>

  <!----------------------
            BANNER
    ---------------------->

    <div class="banner">
      <img src="/img/banner.png" alt="plantas en macetas">
    </div>

    <!----------------------
            FILTRADO
    ---------------------->

    <p class="filtrar">Filtrar por categor√≠a</p>
	
  <div class="select-container">
    <div class="select" tabindex="1">
      <input class="selectopt" name="test" type="radio" id="opt1" checked>
      <label for="opt1" class="option">Plantas de interior</label>
      <input class="selectopt" name="test" type="radio" id="opt2">
      <label for="opt2" class="option">Plantas de exterior</label>
    </div>
  </div>

        <!----------------------
            TERMINA FILTRADO
    ---------------------->

    <h1 class="titulo-listado">Listado de productos</h1>


<section class="destacados">
<div class="cuatro-articulos">
  <div class="dos-articulos">
    <% products.forEach (producto => { %>
      <% const productCapacity = capacity.find(capacity => capacity.cod_capacity == producto.capacity);
      const capacityName = productCapacity.name %>
    <div class="producto-destacado">
      <article>
        <div class="div-img">
          <a href="/products/detail/<%= producto.cod_product%>"><img src="/img/products/<%= producto.image %>"></a>
        </div>
           <div class="articulo-pie">
              <p class="nombre-planta"><%= producto.name %></p>
              <p class="nombre-cienti">Maceta <%=capacityName %> </p>
              <p class="precio"> $<%= producto.price %></p>
              <div class="container-button">
              <button class="boton-carrito" type="button">Agregar al carrito</button></div>
              <form action="/products/delete/<%= producto.cod_product %>?_method=DELETE" method="POST" class="forms-button">
                 <a href="/products/edit/<%= producto.cod_product%>"><i class="fas fa-edit"></i></a>
                 <button type="submit"><i class="fas fa-trash"></i></button>
              </form>
            </div>
      </article>  
    </div>
    <% }) %>
  </div>
</div>
</section>
  
      <!-- 
        FOOTER
       -->
  <%- include('../partials/footer') %>
</body>
</html>