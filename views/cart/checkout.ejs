<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <title>Checkout</title>
    <link rel="stylesheet" href="/css/styles-checkout.css">
    <!-- <link rel="stylesheet" href="/css/styles-cart.css"> -->
   <!--==================================================
        Iconos Fontawesome
    ===================================================-->
    <script src="https://kit.fontawesome.com/439c181295.js" crossorigin="anonymous"></script>
</head>

<body>
      <!--HEADER-->
      <%- include('../partials/header') %>

    <div class="space-between-header-main">
    </div>
    <!----------------- MAIN ------------------->


    <main>
        <div class="container-main">

            <div class="container">
                <div class="info-contact">
                    <p>Información de contacto:</p>
                </div>

                <div class="account">
                    <p>¿Ya tienes una cuenta?</p>
                </div>
                <div class="login3">
                    <a href="#" continuar="continuar">Login</a>
                </div>

                <form action="" method="POST" class="forms-checkout">
                    <div class="container">
                        <!-- ***************************
                                MÉTODO DE ENVÍO 
                        *******************************-->
                        <div class="deliveryMethod">
                            <div>
                                <label class="method-delivery" for="metodo-envio">Método de envío</label>
                            </div>
                            <div class="control-space-top">
                                <label><input type="radio" name="metodo-envio" id="metodo-envio" > <i class="fas fa-truck"></i>Envío a domicilio</label>
                                <label><input type="radio" name="metodo-envio" id="metodo-envio"> <i class="fas fa-store"></i>Retiro en tienda</label>
                            </div>
                        </div>

                        <!-- ***************************
                                DIRECCIÓN DE ENVÍO 
                        *******************************-->

                        <div class="deliveryAddres">
                            <div class="address-delivery">
                                <h2>Dirección de envío:</h2>
                            </div>
                            <!-- Nombre -->
                            <div class="individual-box">
                                <input type="text" name="nombre" id="nombre" placeholder="Nombre:" minlength="4" required>     
                            </div>
                            <!-- Apellido -->
                            <div class="individual-box">
                                <input type="text" name="apellido" id="apellido" placeholder="Apellido:" minlength="4" required> 
                            </div>
                            <!-- Dirección -->
                            <div class="individual-box">
                                <input type="text" name="direccion" id="direccion" placeholder="Dirección:" minlength="4" required> 
                            </div>

                            <!-- País -->
                            <div class="country">
                                <select name="pais" id="pais">
                                    <option selected>Seleccione el país</option>
                                    <option value="argentina" >Argentina</option>
                                    <option value="bolivia">Bolivía</option>
                                    <option value="colombia">Colombia</option>
                                    <option value="venezuela">Venezuela</option>
                                </select>
                            </div>

                            <!-- Ciudad -->
                            <div class="individual-box">
                                <input type="text" name="ciudad" id="ciudad" placeholder="Ciudad:" minlength="4" required> 
                            </div>

                            <!-- Código postal -->
                            <div class="individual-box">
                                <input type="number" name="codigoPostal" id="codigoPostal" placeholder="Codigo Postal:" minlength="4" required> 
                            </div>

                            <!-- Teléfono -->
                            <div class="individual-box">
                                <input type="number" name="telefono" id="telefono" placeholder="Teléfono:" minlength="4" required> 
                            </div>
                        </div>

                    </div>

                </form>
            </div>

            <!-- ***************************
                    Detalle compra 
            *******************************-->
            <div class="cart-template-detail">
                <div class="cart-detail">
                    <div class="cart-title-detail">
                        <h1>Resumen de tu compra</h1>
                    </div>
                    <div class="subtotal">
                        <div class="info">
                            <h2>Subtotal:</h2>
                        </div>
                        <div class="subtotal-cost">
                            <h2>$135.000</h2>
                        </div>
                    </div>
    
                    <div class="discounts">
                        <div class="info">
                            <h2>Descuentos:</h2>
                        </div>
                        <div class="discount-cost">
                            <h2>$</h2>
                        </div>
                    </div>
    
                    <div class="total">
                        <div class="info">
                            <h2>Total:</h2>
                        </div>
                        <div class="total-cost">
                            <h2>$135.000</h2>
                        </div>
                    </div>
                </div>
                
                <section class="content">
                    <article class="cartProducts">
                        <div class="items">
                            <div class="items-img">
                                <a href="#"><img src="/img/IMG_4795-2_2048x2048.jpg" alt=""></a>
                            </div>
                            <div class="items-content">
                                <div class="items-desc">
                                    <div class="item-title">
                                        <a href="#"><span>Homalomena 'Selby'</span></a>
                                    </div>
                                    
                                    <div class="items-description">
                                        <p>Maceta: 12</p>
                                    </div>    
                                </div>
                                <div class="amount-cost">
                                    <h3>$90.000</h3>
                                </div> 
                            </div>
                            
                        </div>
                        
                        <div class="amount">
                            <div class="amount-subtotal">
                                <h3 class="amount-total">Total producto:</h3>
                                <h3>$90.000</h3>
                            </div>
                            <div class="close">
                                <div>
                                    <i class="fas fa-times"></i>
                                </div>
                            </div>
                        </div>
                    </article>

                    <article class="cartProducts">
                        <div class="items">
                            <div class="items-img">
                                <a href="#"><img src="/img/suculenta variada.jpg" alt=""></a>
                            </div>
                            <div class="items-content">
                                <div class="items-desc">
                                    <div class="item-title">
                                        <a href="#"><span>Suculenta variada</span></a>
                                    </div>
                                    
                                    <div class="items-description">
                                        <p>Maceta: 10</p>
                                    </div>    
                                </div>
                                <div class="amount-cost">
                                    <h3>$45.000</h3>
                                </div> 
                            </div>
                            
                        </div>
                        
                        <div class="amount">
                            <div class="amount-subtotal">
                                <h3 class="amount-total">Total producto:</h3>
                                <h3>$45.000</h3>
                            </div>
                            <div class="close">
                                <div>
                                    <i class="fas fa-times"></i>
                                </div>
                            </div>
                        </div>
                    </article>
                </section>
            </div>
            
            <div>
                <button class="box-send">Comprar</button>
                <button class="box-send1">Regresar</button>
            </div>
        </div>
    </main>

      <!-- FOOTER -->
      <%- include('../partials/footer') %>
</body>

</html>